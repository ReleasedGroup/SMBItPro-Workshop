{
  "ConnectionStrings": {
    "Helpdesk": "Data Source=/data/helpdesk-light.db"
  },
  "Attachments": {
    "RootPath": "/data/attachments",
    "MaxSizeBytes": 10485760,
    "AllowedContentTypes": [
      "application/pdf",
      "image/png",
      "image/jpeg",
      "text/plain",
      "application/zip"
    ]
  },
  "Email": {
    "MaxRetryCount": 3
  },
  "Ai": {
    "ModelId": "gpt-5.2",
    "EnableAi": true,
    "AutoRunOnCreateOrUpdate": true,
    "OpenAIApiKey": "<set-from-secret-store>"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  }
}
