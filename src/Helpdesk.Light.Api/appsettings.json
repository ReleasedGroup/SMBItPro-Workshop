{
  "ConnectionStrings": {
    "Helpdesk": "Data Source=helpdesk-light.db"
  },
  "Jwt": {
    "Issuer": "Helpdesk-Light",
    "Audience": "Helpdesk-Light-Clients",
    "SigningKey": "change-me-in-production-with-at-least-32-characters",
    "ExpiryMinutes": 60
  },
  "Cors": {
    "Frontend": {
      "AllowedOrigins": [
        "http://localhost:5006",
        "https://localhost:7262",
        "http://localhost:8082"
      ]
    }
  },
  "Attachments": {
    "RootPath": "storage/attachments",
    "MaxSizeBytes": 10485760,
    "AllowedContentTypes": [
      "application/pdf",
      "image/png",
      "image/jpeg",
      "text/plain",
      "application/zip"
    ]
  },
  "Email": {
    "MaxRetryCount": 3,
    "TransportMode": "Console",
    "SmtpHost": "",
    "SmtpPort": 587,
    "SmtpUseSsl": true,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "SmtpFromAddress": "noreply@localhost",
    "SmtpFromDisplayName": "Helpdesk Light",
    "GraphTenantId": "",
    "GraphClientId": "",
    "GraphClientSecret": "",
    "GraphSenderUserId": ""
  },
  "Ai": {
    "ModelId": "gpt-5.2",
    "EnableAi": true,
    "AutoRunOnCreateOrUpdate": true,
    "OpenAIApiKey": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
