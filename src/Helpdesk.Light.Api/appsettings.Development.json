{
  "ConnectionStrings": {
    "Helpdesk": "Data Source=helpdesk-light.development.db"
  },
  "Jwt": {
    "Issuer": "Helpdesk-Light",
    "Audience": "Helpdesk-Light-Clients",
    "SigningKey": "dev-signing-key-change-before-production-use",
    "ExpiryMinutes": 240
  },
  "Cors": {
    "Frontend": {
      "AllowedOrigins": [
        "http://localhost:5006",
        "https://localhost:7262"
      ]
    }
  },
  "Attachments": {
    "RootPath": "storage/attachments/dev",
    "MaxSizeBytes": 10485760,
    "AllowedContentTypes": [
      "application/pdf",
      "image/png",
      "image/jpeg",
      "text/plain",
      "application/zip"
    ]
  },
  "Email": {
    "MaxRetryCount": 3
  },
  "Ai": {
    "ModelId": "gpt-5.2",
    "EnableAi": true,
    "AutoRunOnCreateOrUpdate": true,
    "OpenAIApiKey": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
