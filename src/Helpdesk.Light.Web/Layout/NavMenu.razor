@using Microsoft.AspNetCore.Components.Routing

<nav class="nav-wrap" aria-label="Main navigation">
    <a href="/" class="nav-item" @onclick="HandleNavigate" @onclick:preventDefault="false">
        <span>Dashboard</span>
        <small>Overview and queue health</small>
    </a>
    <a href="/tickets" class="nav-item" @onclick="HandleNavigate" @onclick:preventDefault="false">
        <span>Tickets</span>
        <small>Open workload and ownership</small>
    </a>
    <a href="/customers" class="nav-item" @onclick="HandleNavigate" @onclick:preventDefault="false">
        <span>Customers</span>
        <small>Tenant and domain mappings</small>
    </a>
    <a href="/login" class="nav-item" @onclick="HandleNavigate" @onclick:preventDefault="false">
        <span>Authentication</span>
        <small>Role-based access</small>
    </a>
</nav>

@code {
    [Parameter]
    public EventCallback OnNavigate { get; set; }

    private async Task HandleNavigate(MouseEventArgs _)
    {
        if (OnNavigate.HasDelegate)
        {
            await OnNavigate.InvokeAsync();
        }
    }
}
